{% extends 'admin_base.html.twig' %}

{% block title %}AlaUne index{% endblock %}

{% block body %}
    <h1>AlaUne index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Auteur</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ala_une in ala_unes %}
            <tr>
                <td>{{ ala_une.id }}</td>
                <td>{{ ala_une.title }}</td>
                <td>{{ ala_une.auteur }}</td>
                <td>{{ ala_une.createdAt ? ala_une.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('ala_une_show', {'id': ala_une.id}) }}">show</a>
                    <a href="{{ path('ala_une_edit', {'id': ala_une.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('ala_une_new') }}">Create new</a>
{% endblock %}
