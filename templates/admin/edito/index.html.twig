{% extends 'base.html.twig' %}

{% block title %}Edito index{% endblock %}

{% block body %}
    <h1>Edito index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for edito in editos %}
            <tr>
                <td>{{ edito.id }}</td>
                <td>{{ edito.title }}</td>
                <td>{{ edito.description }}</td>
                <td>{{ edito.createdAt ? edito.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('edito_show', {'id': edito.id}) }}">show</a>
                    <a href="{{ path('edito_edit', {'id': edito.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('edito_new') }}">Create new</a>
{% endblock %}
