{% extends 'admin_base.html.twig' %}

{% block title %}Connexion Administrateur{% endblock %}

{% block body %}
<div class="app-container app-theme-white body-tabs-shadow fixed-header fixed-sidebar">
    
    <div class="app-container">
      <div class="h-100">
        <div class="h-100 no-gutters row">
          <div class="d-none d-lg-block col-lg-5">
            <div class="slider-light">
              <div class="slick-slider">
                <div>
                  <div class="position-relative h-100 d-flex justify-content-center align-items-center bg-sunny-morning" tabindex="-1">
                    <div class="slide-img-bg bg-azobe">
                        <div class="app-logo">
                            <img src="{{asset('images/azobe_logo.png')}}">
                        </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="h-100 d-flex bg-white justify-content-center align-items-center col-md-12 col-lg-7">
            <div class="mx-auto app-login-box col-sm-12 col-md-10 col-lg-9">
              <h4 class="mb-0">
                <span class="d-block">Bienvenue</span>
                <span>Veillez vous connecter s'il vous plait.</span></h4>
              <div class="divider row"></div>
              <div>
                <form method="post" class="">
                {% if error %}
                     <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}
                  <div class="form-row">
                    <div class="col-md-6">
                      <div class="position-relative form-group">
                        {# <label for="exampleEmail" class="">Email</label>
                        <input name="email" id="exampleEmail" placeholder="Email..." type="email" class="form-control"> #}

                        <label for="inputEmail">Email</label>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Email..." required autofocus>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="position-relative form-group">
                        <label for="inputPassword">Mot de passe</label>
                            <input type="password" name="password" id="inputPassword" class="form-control" required placeholder="Mot de passe...">
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                      </div>
                    </div>
                  </div>
                  <div class="position-relative form-check">
                    <input name="_remember_me" id="exampleCheck" type="checkbox" class="form-check-input">
                    <label for="exampleCheck" class="form-check-label">
                        Garder ma session connectée
                    </label>
                  </div>
                  <div class="divider row"></div>
                  <div class="d-flex align-items-center">
                    <div class="ml-auto">
                       <a href="{{path('app_forgot_password_request')}}" class="btn-lg btn btn-link" style="color: #f0a13a !important;">
                            Mot de passe oublié 
                        </a>
                      <button class="btn btn-lg btn-primary" type="submit" class="btn-primary btn btn-pill" style="font-size:1.1em;">
                        Se Connecter
                      </button>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  {% endblock %}